        <a asp-action="Create" class="btn btn-info">&nbsp; New Product Type</a>
    </div>

</div>
<br/>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.ProductType)
            </th>
        </tr>
    </table>
</div>
